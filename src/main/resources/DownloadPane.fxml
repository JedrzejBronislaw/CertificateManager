<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="600.0" spacing="5.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="certificateManager.ctrls.DownloadPaneController">
   <children>
      <Label text="Certificate Manager">
         <padding>
            <Insets bottom="40.0" />
         </padding>
         <font>
            <Font name="Dancing Script Regular" size="48.0" />
         </font>
      </Label>
      <VBox spacing="5.0">
         <children>
            <Label text="Certificate URL:" />
            <TextField fx:id="urlField" />
         </children>
      </VBox>
      <VBox spacing="5.0">
         <children>
            <Label text="Certificate name:" />
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label minWidth="-Infinity" prefWidth="70.0" text="Record:">
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </Label>
                  <TextArea fx:id="recordField" maxHeight="-Infinity" prefHeight="25.0" prefWidth="464.0" />
               </children>
            </HBox>
            <VBox alignment="TOP_CENTER" fillWidth="false">
               <children>
                  <Label text="Certificate type:" />
                  <VBox fillWidth="false">
                     <children>
                        <RadioButton fx:id="cType_birth" mnemonicParsing="false" text="Birth">
                           <toggleGroup>
                              <ToggleGroup fx:id="certificateType" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="cType_marriage" mnemonicParsing="false" text="Marriage" toggleGroup="$certificateType" />
                        <RadioButton fx:id="cType_death" mnemonicParsing="false" text="Death" toggleGroup="$certificateType" />
                        <RadioButton fx:id="cType_other" mnemonicParsing="false" text="Other" toggleGroup="$certificateType" />
                     </children>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
            <HBox alignment="CENTER_LEFT" minWidth="-Infinity">
               <children>
                  <Label prefWidth="70.0" text="Name:">
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="nameField" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox spacing="5.0">
         <children>
            <Label text="Directory:" />
            <TextField fx:id="dirField" editable="false" text="D:\certificate\" />
            <HBox alignment="TOP_RIGHT">
               <children>
                  <Button fx:id="selectDirButton" alignment="TOP_LEFT" mnemonicParsing="false" text="Select" />
               </children>
            </HBox>
         </children>
      </VBox>
      <Button fx:id="downloadButton" mnemonicParsing="false" text="Download">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Button>
      <Button fx:id="downloadUnitButton" mnemonicParsing="false" text="Download unit" />
   </children>
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>
</VBox>
